# .env.example
# Bu dosyayı .env olarak kopyala ve değerleri düzenle

# 🚀 Server Configuration
PORT=3001
NODE_ENV=development

# 🌐 CORS Settings
CORS_ORIGIN=http://localhost:3000

# 🏓 Ping Settings
PING_TIMEOUT=10000
MAX_PING_COUNT=20
DEFAULT_PING_COUNT=5

# 📊 Logging
LOG_LEVEL=info
LOG_REQUESTS=true